#Calculator
a=int(input("Enter the number: ")
b=int(input("Enter the number: ")

while True:
    print("1.Add")
    print("2.Subtract")
    print("3.Multiply")
    print("4.Divide")
    print("5.Exit")

    choice=input("Enter the choice: ")
    if choice=='1':
        print(a+b)
    elif choice=='2':
        print(a-b)
    elif choice=='3':
        print(a*b)
    elif choice=='4':
        print(a/b)
    elif choice=='5':
        break
    else:
        print("Invalid choice")
